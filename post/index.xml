            &lt;div class=&#34;rating&#34;&gt;
                &lt;span class=&#34;rating_nums&#34;&gt;&lt;/span&gt;&lt;span class=&#34;allstardark&#34;&gt;&lt;span class=&#34;allstarlight&#34; style=&#34;width:90%&#34;&gt;&lt;/span&gt;&lt;/span&gt;&lt;span class=&#34;rating_float&#34;&gt;&lt;/span&gt;&lt;/span&gt;
                &lt;span class=&#34;rating_float&#34;&gt;&amp;lt; 9.1 &gt;&lt;/span&gt;
            &lt;/div&gt;
            &lt;div class=&#34;db-card-abstract&#34;&gt; &lt;/div&gt;
